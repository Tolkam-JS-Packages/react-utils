{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
//      "lib": ["es6", "dom"], // Defaults for --target ES6: DOM,ES6,DOM.Iterable,ScriptHost
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": false,
        "noImplicitUseStrict": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "removeComments": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx"
    },
    "exclude": [
        "./node_modules"
    ]
}
